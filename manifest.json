{
  "name": "Focus",
  "version": "1.0",
  "description": "Closes the Facebook Tab as soon as it's opened",
  "background": { "scripts": ["background.js"] },
  "page_action": {      
    "default_icon" : "icon-19.png"
  },  
  "permissions" : [
    "tabs",
    "http://*/*"
  ],
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "manifest_version": 2
}
